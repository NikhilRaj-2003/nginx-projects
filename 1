version: '3.8'

services:
  service1:
    build: ./service-1
    container_name: service1
    expose:
      - "8081"

  service2:
    build: ./service-2
    container_name: service2
    expose:
      - "8082"

  nginx:
    build: ./nginx
    ports:
      - "8080:80"

    depends_on:
      - service1
      - service2
    container_name: nginx-reverse-proxy

